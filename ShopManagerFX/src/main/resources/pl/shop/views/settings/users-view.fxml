<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="pl.shop.controller.settings.UsersController">

    <HBox alignment="CENTER_LEFT">
        <Label graphicTextGap="10" layoutX="20.0" layoutY="20.0" prefHeight="70.0" prefWidth="510.0" text="Użytkownicy">
            <font>
                <Font size="18.0" />
            </font>
            <graphic>
                <ImageView fitHeight="17" fitWidth="17" preserveRatio="true">
                    <image>
                        <Image url="@../../images/user-icon.png" />
                    </image>
                </ImageView>
            </graphic>
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
        </Label>
    </HBox>

    <HBox AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="80" spacing="10" alignment="CENTER_LEFT">
        <Button text="Dodaj użytkownika" styleClass="myButton, success" />
        <Button text="Edytuj" styleClass="myButton, warning" />
        <Button text="Usuń" styleClass="myButton, danger" />
        <Region HBox.hgrow="ALWAYS" />
        <HBox spacing="10" alignment="CENTER">
            <Label text="Wyszukaj:" />
            <TextField fx:id="searchUserField" promptText="Wpisz nazwę..." />
        </HBox>
    </HBox>

    <TableView fx:id="userTable" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="120">
        <columns>
            <TableColumn fx:id="colId" prefWidth="75.0" text="ID" />
            <TableColumn fx:id="colLogin" prefWidth="75.0" text="Login" />
            <TableColumn fx:id="colPassword" prefWidth="75.0" text="Hasło" />
            <TableColumn fx:id="colRole" prefWidth="75.0" text="Uprawnienia" />
        </columns>
    </TableView>

</AnchorPane>
